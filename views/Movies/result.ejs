<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body class="container">
    <h1 style="margin-left: 40%;"class="h1">Search Results</h1>
    <table class="table table-dark">
        <thead>
          <tr>
            <th class="h3" scope="col">#</th>
            <th class="h3" scope="col">Title</th>
            <th class="h3" scope="col">Release Year</th>
            <th class="h3" scope="col">Rating</th>
          </tr>
        </thead>
        <tbody>
            <% let ratings=['R','U','S','G'];%>
            <% let count=0;%>

            <% for(let i=0;i<movies.Search.length;i++){%>
            <%  let year=movies.Search[i].Year%>
                 <% year=year.slice(0,4); %>
                   <% let index=Math.floor(Math.random()*ratings.length);%>
                   <% let rating=ratings[index];%>
                   <tr>
                    <%count++%>
                  <th class="h3" scope="row"><%=count%></th>
                  <td class="h3"><%=movies.Search[i].Title%></td>
                  <td class="h3"><%=year%></td>
                  <td class="h3"><%=rating%></td>

                  </tr>
                <%}%>  
        </tbody>
        </table>
        <a style="margin-left: 45%;" href="/movies"><button class="btn btn-primary">My Collection</button></a>
</body>
</html>